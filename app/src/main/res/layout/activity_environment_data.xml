<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_gray_FAFAFA"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:paddingTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="7dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/ic_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="现场环境上报"
            android:textStyle="bold"
            android:textColor="@color/color_gray_424242"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



        <TextView
            android:id="@+id/tv_clear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_bg_gray_round_30"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="6dp"
            android:textColor="@color/black"
            android:text="清空"
            android:paddingVertical="8dp"
            android:paddingHorizontal="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/divider_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_gray_E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/iv_back" />

    </android.support.constraint.ConstraintLayout>



    <LinearLayout
        android:id="@+id/ll_data_layout"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:text="气        味"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/et_odor"
                android:padding="6dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="请输入气味"
                android:textSize="14sp"
                android:lines="1"
                android:singleLine="true"
                android:background="@null"
                android:textColorHint="@color/color_gray_E0E0E0"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:text="声        音"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/et_voice"
                android:padding="6dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="请输入声音"
                android:textSize="14sp"
                android:background="@null"
                android:textColorHint="@color/color_gray_E0E0E0"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:text="振        动"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/et_vibration"
                android:padding="6dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="请输入振动"
                android:textSize="14sp"
                android:background="@null"
                android:textColorHint="@color/color_gray_E0E0E0"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:text="电磁干扰"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/et_electromagnetic_interference"
                android:padding="6dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="请输入电磁干扰"
                android:textSize="14sp"
                android:background="@null"
                android:lines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_gray_E0E0E0"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:text="光        线"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/et_ray"
                android:padding="6dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="请输入光线"
                android:textSize="14sp"
                android:lines="1"
                android:singleLine="true"
                android:background="@null"
                android:textColorHint="@color/color_gray_E0E0E0"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:text="温        度"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/et_temperature"
                android:padding="6dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="请输入温度"
                android:textSize="14sp"
                android:background="@null"
                android:lines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_gray_E0E0E0"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:text="其        他"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/et_other"
                android:padding="6dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="请输入其他"
                android:textSize="14sp"
                android:lines="1"
                android:singleLine="true"
                android:background="@null"
                android:textColorHint="@color/color_gray_E0E0E0"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>



    <Button
        android:id="@+id/bt_commit"
        app:layout_constraintTop_toBottomOf="@+id/ll_data_layout"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:text="确认提交"
        android:textColor="@color/white"
        android:background="@drawable/shape_bg_btn_blue_round_25"
        android:layout_height="wrap_content"/>




</android.support.constraint.ConstraintLayout>
