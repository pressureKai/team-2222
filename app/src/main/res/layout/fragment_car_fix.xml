<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@color/color_gray_FAFAFA"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.flyco.tablayout.SlidingTabLayout
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/cl_toolbar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/tabLayout"
                    android:paddingBottom="6dp"
                    android:background="@color/white"
                    android:isScrollContainer="false"
                    app:tl_textSelectColor="@color/color_blue_2979FF"
                    app:tl_textUnselectColor="@color/black"
                    app:tl_indicator_width_equal_title="true"
                    app:tl_indicator_color="@color/color_blue_2979FF"
                    app:tl_divider_padding="1dp"
                    app:tl_indicator_corner_radius="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar"
                    android:text="基本信息"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <android.support.v7.widget.CardView
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="装备编号"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"/>


                            <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:paddingHorizontal="6dp"
                                    android:id="@+id/et_number"
                                    android:paddingVertical="16dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:hint="请输入装备编号"
                                    android:layout_width="match_parent"
                                    android:background="@null"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"/>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/color_gray_E0E0E0"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                            </android.support.constraint.ConstraintLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="装备名称"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"/>


                            <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:paddingHorizontal="6dp"
                                    android:id="@+id/et_name"
                                    android:paddingVertical="16dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:hint="请输入装备名称"
                                    android:layout_width="match_parent"
                                    android:background="@null"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/color_gray_E0E0E0"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                            </android.support.constraint.ConstraintLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_type"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="装备类别"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"/>


                            <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:id="@+id/cl_type"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/et_type"
                                    android:paddingVertical="16dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:hint="请选择装备类别"
                                    android:clickable="true"
                                    android:singleLine="true"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:lines="1"
                                    android:paddingHorizontal="6dp"
                                    android:layout_width="match_parent"
                                    android:background="@null"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"/>



                                <ImageView
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="24dp"
                                    android:src="@drawable/icon_new_next"
                                    android:layout_height="24dp"/>


                            </android.support.constraint.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>




                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar"
                    android:text="使用信息"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <android.support.v7.widget.CardView
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/ll_part"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="故障部件"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"/>


                            <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:paddingHorizontal="6dp"
                                    android:id="@+id/et_fix_part"
                                    android:paddingVertical="16dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:hint="请选择故障部件"
                                    android:layout_width="match_parent"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:lines="1"
                                    android:clickable="true"
                                    android:focusableInTouchMode="false"
                                    android:focusable="false"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"/>


                                <ImageView
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="24dp"
                                    android:src="@drawable/icon_new_next"
                                    android:layout_height="24dp"/>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/color_gray_E0E0E0"
                                    app:layout_constraintBottom_toBottomOf="parent"/>


                            </android.support.constraint.ConstraintLayout>

                        </LinearLayout>




                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="维修人员"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"/>


                            <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:paddingHorizontal="6dp"
                                    android:id="@+id/et_person"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="请输入维修人员"
                                    android:paddingVertical="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.0"
                                    tools:layout_editor_absoluteX="0dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/color_gray_E0E0E0"
                                    app:layout_constraintBottom_toBottomOf="parent"/>



                            </android.support.constraint.ConstraintLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_time"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="维修时间"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"/>


                            <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:paddingHorizontal="6dp"
                                    android:id="@+id/et_fix_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="请选择维修时间"
                                    android:paddingVertical="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:clickable="false"
                                    android:singleLine="true"
                                    android:focusable="false"
                                    android:focusableInTouchMode="true"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.0"
                                    tools:layout_editor_absoluteX="0dp" />



                                <ImageView
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="24dp"
                                    android:src="@drawable/icon_new_next"
                                    android:layout_height="24dp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/color_gray_E0E0E0"
                                    app:layout_constraintBottom_toBottomOf="parent"/>



                            </android.support.constraint.ConstraintLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="维修备注"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"/>


                            <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:paddingHorizontal="6dp"
                                    android:id="@+id/et_notice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:gravity="start"
                                    android:hint="请输入备注"
                                    android:lines="4"
                                    android:paddingVertical="16dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.0"
                                    tools:layout_editor_absoluteX="0dp" />


                            </android.support.constraint.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>




                </android.support.v7.widget.CardView>




                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>




                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <Button
                        android:id="@+id/bt_commit"
                        android:layout_margin="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="保存并上传"
                        android:background="@drawable/shape_bg_btn_blue_round_8"
                        android:layout_height="wrap_content"/>


                    <Button
                        android:id="@+id/bt_save"
                        android:layout_margin="16dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="写入信标"
                        android:background="@drawable/shape_bg_btn_blue_round_8"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>





</LinearLayout>
