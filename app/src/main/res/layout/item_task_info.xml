<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="9dp"
        android:drawableLeft="@mipmap/ic_state_finish"
        android:drawablePadding="7dp"
        android:text="身高体重考核"
        android:textColor="@color/color_gray_616161"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:text="ID"
        android:textColor="@color/color_blue_2979FF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_task_name"
        app:layout_constraintTop_toBottomOf="@id/tv_task_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="11dp"
        android:background="@color/color_gray_E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="8888"
        android:textColor="@color/color_gray_616161"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/id"
        app:layout_constraintTop_toTopOf="@id/id" />

    <ImageView
        android:id="@+id/iv_change_state"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="80dp"
        android:src="@mipmap/ic_state_to_finish"
        app:layout_constraintBottom_toBottomOf="@id/id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_task_name" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="25dp"
        android:src="@mipmap/ic_more"
        app:layout_constraintBottom_toBottomOf="@id/id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_task_name" />

</android.support.constraint.ConstraintLayout>