<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_FAFAFA">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        tools:text="张小三"
        android:textColor="@color/color_gray_BDBDBD"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        tools:text="777579616e776569a1a2a3a4a5a6a7a8"
        android:textColor="@color/color_gray_BDBDBD"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        tools:text="2020-12-28 , 22:48:57"
        android:textColor="@color/color_gray_BDBDBD"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tv_id"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"/>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_marginRight="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/iv_more_blue"
        android:layout_width="26dp"
        android:layout_height="26dp" />
    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/divider_line_1"
        android:layout_marginHorizontal="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="@color/color_gray_E0E0E0"/>
</android.support.constraint.ConstraintLayout>