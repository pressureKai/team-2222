<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.jiangtai.count.widget.SlideWrapper
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/slide"
        app:mode="dynamic"
        app:anim_duration="300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/delete"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:tag="ctrl"
            android:text="删除"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#ff2C00"/>


        <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="9dp"
                android:drawableLeft="@mipmap/ic_state_finish"
                android:drawablePadding="7dp"
                android:text="身高体重考核"
                android:textColor="@color/color_gray_616161"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:text="时间"
                android:textColor="@color/color_blue_2979FF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_task_name"
                app:layout_constraintTop_toBottomOf="@id/tv_task_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="11dp"
                android:background="@color/color_gray_E0E0E0"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="2020-01-08 00:00:00"
                android:textColor="@color/color_gray_616161"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/id"
                app:layout_constraintTop_toTopOf="@id/id" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一"
                android:textColor="@color/color_gray_616161"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/tv_start_time"
                app:layout_constraintTop_toTopOf="@id/tv_start_time" />
            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-01-08 00:00:00"
                android:textColor="@color/color_gray_616161"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/tv"
                app:layout_constraintTop_toTopOf="@id/tv" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_score"
                android:layout_width="60dp"
                android:layout_height="42dp"
                android:layout_marginEnd="14dp"
                android:text="100kg,100cm"
                android:textSize="12sp"
                android:textColor="@color/color_blue_2979FF"
                app:layout_constraintBottom_toBottomOf="@id/id"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_task_name" />

        </android.support.constraint.ConstraintLayout>
    </com.jiangtai.count.widget.SlideWrapper>



</android.support.constraint.ConstraintLayout>