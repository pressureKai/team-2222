<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_ECF0F4">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:text="设置选项"
        android:textColor="@color/color_gray_424242"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_del_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_bg_btn_blue29_round"
        android:drawableLeft="@mipmap/ic_clear"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingHorizontal="27dp"
        android:paddingVertical="5dp"
        android:text="清空所有任务"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/divider_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/color_gray_E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:src="@mipmap/ic_phone"
        android:tint="@color/color_blue2_alpha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_line_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="手持机IP"
        android:textColor="@color/color_gray_424242"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/iv_phone"
        app:layout_constraintTop_toBottomOf="@id/divider_line_2" />

    <EditText
        android:id="@+id/et_phone_ip"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_bg_btn_white_round"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textColor="@color/color_gray_424242"
        android:textCursorDrawable="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/iv_phone" />

    <View
        android:id="@+id/divider_line_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="11dp"
        android:background="@color/color_gray_E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/et_phone_ip" />

    <ImageView
        android:id="@+id/iv_id"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:src="@mipmap/ic_per_id"
        android:tint="@color/color_blue2_alpha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_line_3" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="ID"
        android:textColor="@color/color_gray_424242"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/iv_phone"
        app:layout_constraintTop_toBottomOf="@id/divider_line_3" />

    <EditText
        android:id="@+id/et_phone_id"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_bg_btn_white_round"
        android:gravity="center_vertical"
        android:inputType="number"
        android:paddingLeft="12dp"
        android:textColor="@color/color_gray_424242"
        android:textCursorDrawable="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id" />

    <View
        android:id="@+id/divider_line_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="11dp"
        android:background="@color/color_gray_E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/et_phone_id" />

    <ImageView
        android:id="@+id/iv_ip"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:src="@mipmap/ic_sever"
        android:tint="@color/color_blue2_alpha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_line_4" />

    <TextView
        android:id="@+id/tv_sever_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="服务器IP"
        android:textColor="@color/color_gray_424242"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/iv_phone"
        app:layout_constraintTop_toBottomOf="@id/divider_line_4" />

    <EditText
        android:id="@+id/et_serve_ip"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_bg_btn_white_round"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textColor="@color/color_gray_424242"
        android:textCursorDrawable="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sever_ip" />

    <TextView
        android:id="@+id/offline_map_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="6dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_bg_btn_blue29_round"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="离线地图"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/et_serve_ip" />


    <LinearLayout
        android:id="@+id/ll_data_layout"
        app:layout_constraintTop_toBottomOf="@+id/offline_map_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_data_upload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_bg_btn_blue29_round"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="油库信息"
            android:textColor="@color/white"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/offline_map_download" />


        <TextView
            android:id="@+id/tv_environment_upload"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_bg_btn_blue29_round"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="现场环境"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_data_upload" />

        <TextView
            android:id="@+id/tv_inspection_upload"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_bg_btn_blue29_round"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="车辆巡检"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_environment_upload" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_upload_data_layout"
        app:layout_constraintTop_toBottomOf="@+id/ll_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_bg_btn_blue29_round"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="油库信息"
            android:textColor="@color/white"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/offline_map_download" />


        <TextView
            android:id="@+id/tv_stop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_bg_btn_blue29_round"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="现场环境"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_data_upload" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_upload_data_layout">

        <TextView
            android:id="@+id/setting_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="6dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_btn_blue29_round"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="频点"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/setting_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="6dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_btn_blue29_round"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="功率"

            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/setting_1" />

    </LinearLayout>

    <Button
        android:id="@+id/send_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="发送"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/history"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="接收历史"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/iv_save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/iv_save"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginBottom="15dp"
        android:background="@mipmap/my_bag"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="保存设置"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>