<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cl_toolbar"
            android:background="@color/color_blue_2979FF"
            android:layout_width="match_parent"
            android:paddingTop="48dp"
            android:paddingHorizontal="16dp"
            android:paddingBottom="32dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_open"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/icon_new_menu_white"
                android:layout_width="24dp"
                android:layout_height="24dp"/>



            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="人工采集录入软件"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </android.support.constraint.ConstraintLayout>




        <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toTopOf="@id/cl_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_top_white_round"
            android:layout_marginTop="88dp"
            app:layout_constraintVertical_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_weather"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:layout_marginTop="6dp"
                            android:text="气象信息"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_car_normal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="车辆日常信息采集"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_car_fix"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="车辆维修信息"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_oil_normal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="Y料日清"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_oil_helicopter"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="直升机加Y"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_airdrop"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="空投物质采集"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_device"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="设施采集"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_feel_layout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="目标感知记录"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>





                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_test"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="网关测试"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="空投物质采集"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="设施采集"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:src="@drawable/icon_weather_main"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="目标感知记录"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>





    <LinearLayout
        android:background="@color/white"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_new_defalut_head"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_user_name"
                    android:textColor="@color/black"
                    android:text="CETC_电科疆泰"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


                <TextView
                    android:text="研发部  管理员"
                    android:id="@+id/tv_user_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_new_home"/>



            <TextView
                android:text="首页"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_data"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_new_home_box"/>



            <TextView
                android:text="信息采集"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_clear"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_new_clear"/>



            <TextView
                android:text="清理缓存"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>




        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/tv_app_version"
            android:text="版本号 V1.0.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_quit"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_new_quit"/>



            <TextView
                android:text="退出"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>