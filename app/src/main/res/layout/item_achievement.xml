<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_FAFAFA">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        tools:text="张小三"
        android:textColor="@color/color_gray_BDBDBD"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        tools:text="777579616e776569a1a2a3a4a5a6a7a8"
        android:textColor="@color/color_gray_BDBDBD"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name" />
    <ImageView
        android:src="@mipmap/ic_loc_map"
        app:layout_constraintRight_toLeftOf="@id/tv_task_state"
        app:layout_constraintLeft_toRightOf="@id/tv_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/iv_location"
        android:layout_marginRight="5dp"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    <TextView
        android:id="@+id/tv_task_state"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        tools:text="考核中"
        android:textColor="@color/color_gray_BDBDBD"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/iv_location"
        app:layout_constraintTop_toTopOf="@id/tv_name" />
    <TextView
        android:id="@+id/tv_score"
        android:layout_marginRight="13dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_blue_2979FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        tools:text="身高100,体重60"/>
    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/divider_line_1"
        android:layout_marginHorizontal="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="@color/color_gray_E0E0E0"/>
</android.support.constraint.ConstraintLayout>